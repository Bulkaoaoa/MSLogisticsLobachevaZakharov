<Window x:Class="Desctop.Windows.NotBusyCourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desctop.Windows"
        mc:Ignorable="d"
        Title="NotBusyCourierWindow" Height="134.5" Width="600" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <TextBlock Cursor="Hand" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="Red">X</TextBlock>
        <Border BorderThickness="1" BorderBrush="Black">
            <Grid VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center" FontSize="20">Выберите курьера для заказа</TextBlock>
                    <ComboBox Background="{StaticResource MainGray}" Foreground="White" Margin="5" Name="CbCouriers" DisplayMemberPath="FIO"></ComboBox>
                    <Button Background="{StaticResource MainGray}" Foreground="White" x:Name="BtnOk" Click="BtnOk_Click" Margin="5">OK</Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
