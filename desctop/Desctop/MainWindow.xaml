<Window x:Class="Desctop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desctop"
        mc:Ignorable="d"
        Title="" Height="600" Width="1000" MinHeight="600" MinWidth="1000" Icon="Resources/mainlogo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource MainYellow}">
            <TextBlock HorizontalAlignment="Center" Foreground="Black" FontSize="40">MsLogistic</TextBlock>
            <Button Visibility="Collapsed" Background="{StaticResource MainGray}" Foreground="White" Click="BtnBack_Click" x:Name="BtnBack" HorizontalAlignment="Left" Width="150" Content="Выйти" Margin="15"></Button>
            <Image HorizontalAlignment="Right" Source="Resources/mainlogo.png" Height="60" Margin="5" RenderOptions.BitmapScalingMode="HighQuality"></Image>
        </Grid>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="3">
            <Frame ContentRendered="MainFrame_ContentRendered" Grid.Row="1" NavigationUIVisibility="Hidden" Name="MainFrame"></Frame>
        </Border>
    </Grid>
</Window>
