<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mob.Pages.Client.CreateOrderPage" Title="Создание заказа">
    <ContentPage.Content>
        <ScrollView HorizontalOptions="FillAndExpand">
            <StackLayout HorizontalOptions="FillAndExpand">
                <Entry x:Name="EntryCode" HorizontalOptions="FillAndExpand" Placeholder="Коды для доступа"></Entry>
                <Entry x:Name="EntryStartLocation" HorizontalOptions="FillAndExpand" Placeholder="Откуда доставить?"></Entry>
                <Entry x:Name="EntryEndLocation" HorizontalOptions="FillAndExpand" Placeholder="Куда доставить?"></Entry>
                <Editor x:Name="EditorComment" HorizontalOptions="FillAndExpand" Placeholder="Комментарий к заказу"></Editor>
                <StackLayout HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Start" Text="Тип заказа"></Label>
                    <Picker Title="Выберете категорию доставки" x:Name="PickerTypeOfOrder" HorizontalOptions="FillAndExpand" ItemDisplayBinding="{Binding NamePrice}"></Picker>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <Switch x:Name="SwitchForDateTime"  Toggled="SwitchForDateTime_Toggled" VerticalOptions="Center"></Switch>
                    <Label  Text="Доставить ко времени?" VerticalOptions="Center"></Label>
                </StackLayout>
                <StackLayout x:Name="StackWithDateOFDelivery" HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Start" Text="Дата доставки"></Label>
                    <DatePicker x:Name="DatePDateOfDelivery"></DatePicker>
                </StackLayout>
                <StackLayout x:Name="StackWithTimeOFDelivery" HorizontalOptions="FillAndExpand">
                    <Label HorizontalOptions="Start" Text="Дата доставки"></Label>
                    <TimePicker x:Name="TimePDateOfDelivery"></TimePicker>
                </StackLayout>
                <Button HorizontalOptions="FillAndExpand" x:Name="BtnAddOrder" Clicked="BtnAddOrder_Clicked"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>